{
  "env": {
    "browser": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "2022"
  },
  "rules": {
    "max-classes-per-file": [
      "error",
      {
        "ignoreExpressions": true,
        "max": 2
      }
    ],
    "no-console": "off",
    "no-else-return": "off",
    "no-shadow": "off",
    "no-use-before-define": "off",
    "spaced-comment": [
      "error",
      "always",
      {
        "exceptions": [
          "/"
        ]
      }
    ],
    "yoda": [
      "error",
      "never",
      {
        "exceptRange": true
      }
    ]
  }
}
